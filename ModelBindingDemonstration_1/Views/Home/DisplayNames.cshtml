@model List<string>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DisplayNames</title>
</head>
<body>
    <div> 
        <h2>Understanding Model Binding...</h2>
        @if (Model.Count == 0)
        {
            using (Html.BeginForm())
            {
                for(int i = 1; i <= 5; i++)
                {
                    <p>
                        <label>Name - @i : <input type="text" name="Names" /></label>
                    </p>
                }
                <button>Save</button>
            }
        }
        else
        {
            <h2>Displaying Names...</h2>
            <ul>
                @foreach(var i in Model)
                {
                    <li>@i</li>
                }
            </ul>
        }
    </div>
</body>
</html>
