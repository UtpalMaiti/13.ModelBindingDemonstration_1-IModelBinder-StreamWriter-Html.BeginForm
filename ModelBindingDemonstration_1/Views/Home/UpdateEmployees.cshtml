@model List<ModelBindingDemonstration_1.Models.Employee>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateEmployees</title>
</head>
<body>
    <div> 
        <h2>Understanding Model Binding...</h2>
        @using (Html.BeginForm())
        {
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Salary</th>
                    </tr>
                </thead>
                <tbody>
                    @for(int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.TextBox("employees["+i+"].Id",Model[i].Id)
                            </td>
                            <td>
                                @Html.TextBox("employees[" + i + "].Name", Model[i].Name)
                            </td>
                            <td>
                                @Html.TextBox("employees[" + i + "].Location", Model[i].Location)
                            </td>
                            <td>
                                @Html.TextBox("employees[" + i + "].Salary", Model[i].Salary)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button>Update</button>
        }
    </div>
</body>
</html>
